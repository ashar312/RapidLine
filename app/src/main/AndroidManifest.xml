<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.rapidline">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminRights" />
        <activity android:name=".Form.AdminForm" />
        <activity
            android:name=".PrintOut.PrintOutActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Register_Entries"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Form.AddBailForm"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Form.LabourPatriForm"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Form.AgentForm"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Form.SenderRecieverTransporterForm"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".HomeScreens.AddActivities.ListActivities"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".HomeScreens.Home"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.project.rapidline.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>