<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Brown</item>
        <item name="colorPrimaryDark">@color/Brown</item>
        <item name="colorAccent">@color/Brown</item>
    </style>

    <style name="FormInputTextFields">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/edittextshape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/Dark_gray</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CheckboxFields">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SpinnerField">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
